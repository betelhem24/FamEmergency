generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_DATABASE_URL")
}

model User {
  id             String             @id
  email          String             @unique
  name           String?
  password       String
  role           String             @default("PATIENT")
  createdAt      DateTime           @default(now())
  department     String?
  medicalLicense String?
  theme          String             @default("dark")
  updatedAt      DateTime           @updatedAt
  Comment        Comment[]
  Emergency      Emergency[]
  contacts       EmergencyContact[]
  medicalRecord  MedicalRecord?
  Post           Post[]
  Support        Support[]
}

model MedicalRecord {
  id          String   @id
  userId      String   @unique
  fullName    String?
  dob         String?
  gender      String?
  age         Int?     @default(0)
  familyPhone String?
  bloodType   String?
  height      String?
  weight      String?
  allergies   String[] @default([])
  conditions  String[] @default([])
  medications Json[]   @default([])
  images      Json[]   @default([])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user        User     @relation(fields: [userId], references: [id])
}

model EmergencyContact {
  id       Int    @id @default(autoincrement())
  name     String
  phone    String
  relation String
  userId   String
  user     User   @relation(fields: [userId], references: [id])
}

model Comment {
  id        String   @id
  postId    String
  userId    String
  userName  String
  text      String
  createdAt DateTime @default(now())
  Post      Post     @relation(fields: [postId], references: [id])
  User      User     @relation(fields: [userId], references: [id])
}

model Emergency {
  id          String    @id
  userId      String
  type        String
  severity    String    @default("CRITICAL")
  latitude    Float
  longitude   Float
  address     String?
  status      String    @default("ACTIVE")
  triggeredAt DateTime  @default(now())
  resolvedAt  DateTime?
  notes       String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  User        User      @relation(fields: [userId], references: [id])
}

model Post {
  id        String    @id
  userId    String
  userName  String
  content   String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  Comment   Comment[]
  User      User      @relation(fields: [userId], references: [id])
  Support   Support[]
}

model Support {
  id        String   @id
  postId    String
  userId    String
  createdAt DateTime @default(now())
  Post      Post     @relation(fields: [postId], references: [id])
  User      User     @relation(fields: [userId], references: [id])

  @@unique([postId, userId])
}
