// This is your standard Prisma setup
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 1. THE USER MODEL (Only list this ONCE)
model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  password  String
  contacts  EmergencyContact[] 
}

// 2. THE EMERGENCY CONTACT MODEL
model EmergencyContact {
  id        Int      @id @default(autoincrement())
  name      String
  phone     String
  relation  String
  
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
}